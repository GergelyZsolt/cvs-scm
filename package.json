{
  "name": "cvs-ext",
	"displayName": "CVS Ext",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.69.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:cvs-ext.start"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "cvs-ext.start",
				"title": "CVS: Start"
			},
			{
				"command": "cvs-ext.status",
				"title": "CVS: Status"
			},
			{
				"command": "cvs-ext.compare",
				"title": "CVS: Compare"
			},
			{
				"command": "cvs-ext.diff",
				"title": "CVS: Diff"
			}
		],
		"menus": {
			"scm/title":[
				{
					"command": "cvs-ext.status",
					"group": "navigation",
					"when": "scmProvider == cvs"
				},
				{
					"command": "cvs-ext.compare",
					"when": "scmProvider == cvs"
				}
			],
			"scm/resourceState/context": [
			    {
			        "command": "cvs-ext.diff",
			        "when": "scmProvider == cvs && scmResourceState == diffable"
			    }
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.69.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"eslint": "^8.18.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.4",
		"@vscode/test-electron": "^2.1.5"
	}
}
