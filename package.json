{
  "name": "cvs-ext",
	"displayName": "CVS Ext",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.69.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:cvs-ext.refresh",
		"workspaceContains:CVS/Root"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "cvs-ext.refresh",
				"title": "CVS: Refresh Repository",
				"icon": "$(refresh)"
			},
			{
				"command": "cvs-ext.commit-all",
				"title": "CVS: Commit All",
				"icon": "$(check-all)"
			},
			{
				"command": "cvs-ext.commit-file",
				"title": "CVS: Commit File",
				"icon": "$(check)"
			},
			{
				"command": "cvs-ext.revert",
				"title": "CVS: Revert File",
				"icon": "$(discard)"
			},
			{
				"command": "cvs-ext.add",
				"title": "CVS: Add File",
				"icon": "$(add)"
			},
			{
				"command": "cvs-ext.delete-file",
				"title": "CVS: Delete file",
				"icon": "$(remove)"
			},
			{
				"command": "cvs-ext.undo-add",
				"title": "CVS: Undo add of file",
				"icon": "$(discard)"
			},
			{
				"command": "cvs-ext.remove-file",
				"title": "CVS: Remove file from CVS",
				"icon": "$(remove)"
			},
			{
				"command": "cvs-ext.undo-remove",
				"title": "CVS: Recover removed file",
				"icon": "$(discard)"
			},
			{
				"command": "cvs-ext.recover",
				"title": "CVS: Recover lost file",
				"icon": "$(discard)"
			},
			{
				"command": "cvs-ext.merge-latest",
				"title": "CVS: Merge latest changes from server",
				"icon": "$(cloud-download)"
			},
			{
				"command": "cvs-ext.force-revert",
				"title": "CVS: Abandon conflicts and revert to HEAD",
				"icon": "$(discard)"
			},
			{
				"command": "cvs-ext.openFile",
				"title": "OpenFile",
				"icon": "$(go-to-file)"
			}
		],
		"menus": {
			"scm/title":[
				{
					"command": "cvs-ext.refresh",
					"group": "navigation",
					"when": "scmProvider == cvs"
				},
				{
					"command": "cvs-ext.commit-all",
					"group": "navigation",
					"when": "scmProvider == cvs"
				}
			],
			"scm/resourceState/context": [
				{
					"command": "cvs-ext.openFile",
					"group": "inline",
					"when": "scmProvider == cvs"
				},
				{
					"command": "cvs-ext.revert",
					"group": "inline",
					"when": "scmProvider == cvs && scmResourceGroup == workingTree && scmResourceState == modified"
				},
				{
					"command": "cvs-ext.commit-file",
					"group": "inline",
					"when": "scmProvider == cvs && scmResourceGroup == workingTree && scmResourceState != lost && scmResourceState != conflict && scmResourceState != merge && scmResourceState != patch"
				},
				{
					"command": "cvs-ext.add",
					"group": "inline",
					"when": "scmProvider == cvs && scmResourceGroup == unknownTree"
				},
				{
					"command": "cvs-ext.delete-file",
					"group": "inline",
					"when": "scmProvider == cvs && scmResourceGroup == unknownTree"
				},
				{
					"command": "cvs-ext.undo-add",
					"group": "inline",
					"when": "scmProvider == cvs && scmResourceGroup == workingTree && scmResourceState == undoable"					
				},
				{
					"command": "cvs-ext.remove-file",
					"group": "inline",
					"when": "scmProvider == cvs && scmResourceGroup == workingTree && scmResourceState == lost"
				},
				{
					"command": "cvs-ext.undo-remove",
					"group": "inline",
					"when": "scmProvider == cvs && scmResourceGroup == workingTree && scmResourceState == removed"					
				},
				{
					"command": "cvs-ext.recover",
					"group": "inline",
					"when": "scmProvider == cvs && scmResourceGroup == workingTree && scmResourceState == lost"					
				},
				{
					"command": "cvs-ext.merge-latest",
					"group": "inline",
					"when": "scmProvider == cvs && scmResourceGroup == conflictTree && scmResourceState == merge"					
				},
				{
					"command": "cvs-ext.merge-latest",
					"group": "inline",
					"when": "scmProvider == cvs && scmResourceGroup == conflictTree && scmResourceState == patch"					
				},
				{
					"command": "cvs-ext.force-revert",
					"group": "inline",
					"when": "scmProvider == cvs && scmResourceGroup == conflictTree && scmResourceState == conflict"				
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.69.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"eslint": "^8.18.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.4",
		"@vscode/test-electron": "^2.1.5"
	}
}
