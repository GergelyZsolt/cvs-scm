{
  "name": "cvs-scm",
	"displayName": "CVS",
	"description": "Integrates CVS support into VS Code's SCM interface",
	"version": "1.2.1",
	"engines": {
		"vscode": "^1.69.0"
	},
	"categories": [
		"Other",
		"SCM Providers"
	],
	"keywords": [
        "multi-root ready",
        "scm",
        "cvs"
    ],
	"publisher": "Schwartzkers",
	"license": "MIT",
	"icon": "resources/icons/cvs-scm.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/Schwartzkers/cvs-scm"
	  },
	"activationEvents": [
        "onCommand:cvs-scm.refresh",
		"workspaceContains:CVS/Root"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "CVS",
			"properties": {
				"exclude.folders": {
					"markdownDescription": "To exclude CVS folders from Explorer, add glob pattern **/CVS: '#files.exclude#'",
					"scope": "application"
				},
				"exclude.files": {
					"markdownDescription": "To exclude CVS revision files (e.g. .#file.revision) from Explorer, add glob pattern **/.#*: `#files.exclude#`",
					"scope": "application"
				}
			}
		},
		"commands": [
			{
				"command": "cvs-scm.refresh",
				"title": "Refresh Repository",
				"icon": "$(refresh)",
				"category": "cvs-scm"
			},
			{
				"command": "cvs-scm.commit",
				"title": "Commit Changes",
				"icon": "$(check)",
				"category": "cvs-scm"
			},
			{
				"command": "cvs-scm.discard",
				"title": "Discard Changes",
				"icon": "$(discard)",
				"category": "cvs-scm"
			},
			{
				"command": "cvs-scm.add",
				"title": "Add",
				"icon": "$(add)",
				"category": "cvs-scm"
			},
			{
				"command": "cvs-scm.add-folder",
				"title": "Add Folder to Repo",
				"icon": "$(cloud-upload)",
				"category": "cvs-scm"
			},
			{
				"command": "cvs-scm.stage",
				"title": "Stage Changes",
				"icon": "$(add)",
				"category": "cvs-scm"
			},
			{
				"command": "cvs-scm.unstage",
				"title": "Unstage Changes",
				"icon": "$(remove)",
				"category": "cvs-scm"
			},
			{
				"command": "cvs-scm.stage-all",
				"title": "Stage all Changes",
				"icon": "$(add)",
				"category": "cvs-scm"
			},
			{
				"command": "cvs-scm.unstage-all",
				"title": "Unstage all Changes",
				"icon": "$(remove)",
				"category": "cvs-scm"
			},
			{
				"command": "cvs-scm.delete",
				"title": "Delete",
				"icon": "$(remove)",
				"category": "cvs-scm"
			},
			{
				"command": "cvs-scm.undo-add",
				"title": "Discard Changes",
				"icon": "$(discard)",
				"category": "cvs-scm"
			},
			{
				"command": "cvs-scm.remove-file",
				"title": "Remove file from CVS",
				"icon": "$(remove)",
				"category": "cvs-scm"
			},
			{
				"command": "cvs-scm.undo-remove",
				"title": "Recover removed file",
				"icon": "$(discard)",
				"category": "cvs-scm"
			},
			{
				"command": "cvs-scm.recover",
				"title": "Recover deleted file",
				"icon": "$(discard)",
				"category": "cvs-scm"
			},
			{
				"command": "cvs-scm.merge-latest",
				"title": "Merge with HEAD",
				"icon": "$(cloud-download)",
				"category": "cvs-scm"
			},
			{
				"command": "cvs-scm.force-revert",
				"title": "Abandon conflicts and revert to HEAD",
				"icon": "$(discard)",
				"category": "cvs-scm"
			},
			{
				"command": "cvs-scm.openFile",
				"title": "Open File",
				"icon": "$(go-to-file)",
				"category": "cvs-scm"
			}
		],
		"menus": {
			"scm/title":[
				{
					"command": "cvs-scm.refresh",
					"group": "navigation@2",
					"when": "scmProvider == cvs"
				},
				{
					"command": "cvs-scm.commit",
					"group": "navigation@1",
					"when": "scmProvider == cvs"
				}
			],
			"scm/resourceGroup/context":[
				{
					"command": "cvs-scm.stage-all",
					"group": "inline@1",
					"when": "scmProvider == cvs && scmResourceGroup == changeTree"
				},
				{
					"command": "cvs-scm.unstage-all",
					"group": "inline@2",
					"when": "scmProvider == cvs && scmResourceGroup == stagingTree"
				}
			],
			"scm/resourceState/context": [
				{
					"command": "cvs-scm.openFile",
					"group": "inline@1",
					"when": "scmProvider == cvs && scmResourceState != checkout && scmResourceState != deleted && scmResourceState != removed && scmResourceState != untracked_folder"
				},
				{
					"command": "cvs-scm.discard",
					"group": "inline@2",
					"when": "scmProvider == cvs && scmResourceGroup == changeTree && scmResourceState == modified"
				},
				{
					"command": "cvs-scm.discard",
					"group": "inline@2",
					"when": "scmProvider == cvs && scmResourceGroup == stagingTree && scmResourceState == modified"
				},
				{
					"command": "cvs-scm.add",
					"group": "inline@2",
					"when": "scmProvider == cvs && scmResourceGroup == untrackedTree && scmResourceState == untracked_file"
				},
				{
					"command": "cvs-scm.add-folder",
					"group": "inline@2",
					"when": "scmProvider == cvs && scmResourceGroup == untrackedTree && scmResourceState == untracked_folder"
				},
				{
					"command": "cvs-scm.delete",
					"group": "inline@3",
					"when": "scmProvider == cvs && scmResourceGroup == untrackedTree"
				},
				{
					"command": "cvs-scm.undo-add",
					"group": "inline@2",
					"when": "scmProvider == cvs && scmResourceGroup == changeTree && scmResourceState == undoable"					
				},
				{
					"command": "cvs-scm.undo-add",
					"group": "inline@2",
					"when": "scmProvider == cvs && scmResourceGroup == stagingTree && scmResourceState == undoable"					
				},
				{
					"command": "cvs-scm.remove-file",
					"group": "inline",
					"when": "scmProvider == cvs && scmResourceGroup == conflictTree && scmResourceState == deleted"
				},
				{
					"command": "cvs-scm.recover",
					"group": "inline",
					"when": "scmProvider == cvs && scmResourceGroup == conflictTree && scmResourceState == deleted"					
				},
				{
					"command": "cvs-scm.undo-remove",
					"group": "inline",
					"when": "scmProvider == cvs && scmResourceGroup == changeTree && scmResourceState == removed"					
				},
				{
					"command": "cvs-scm.undo-remove",
					"group": "inline",
					"when": "scmProvider == cvs && scmResourceGroup == stagingTree && scmResourceState == removed"					
				},
				{
					"command": "cvs-scm.merge-latest",
					"group": "inline",
					"when": "scmProvider == cvs && scmResourceGroup == conflictTree && scmResourceState == merge"
				},
				{
					"command": "cvs-scm.merge-latest",
					"group": "inline",
					"when": "scmProvider == cvs && scmResourceGroup == conflictTree && scmResourceState == patch"					
				},
				{
					"command": "cvs-scm.merge-latest",
					"group": "inline",
					"when": "scmProvider == cvs && scmResourceGroup == conflictTree && scmResourceState == checkout"					
				},
				{
					"command": "cvs-scm.merge-latest",
					"group": "inline",
					"when": "scmProvider == cvs && scmResourceGroup == conflictTree && scmResourceState == invalid"					
				},
				{
					"command": "cvs-scm.force-revert",
					"group": "inline",
					"when": "scmProvider == cvs && scmResourceGroup == conflictTree && scmResourceState == conflict"				
				},
				{
					"command": "cvs-scm.stage",
					"group": "inline@3",
					"when": "scmProvider == cvs && scmResourceGroup == changeTree"				
				},
				{
					"command": "cvs-scm.unstage",
					"group": "inline@3",
					"when": "scmProvider == cvs && scmResourceGroup == stagingTree"				
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.69.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"eslint": "^8.18.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.4",
		"@vscode/test-electron": "^2.1.5"
	}
}
